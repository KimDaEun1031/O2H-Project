<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.company.mapper.HYPhotoBoardMapper">
	
	<!-- 삽입 -->
	<insert id="insert">
		<selectKey keyProperty="bno" order="BEFORE" resultType="int">
			select seq_photo_board.nextval from dual
		</selectKey>
		insert into photo_board(bno,title,writer) values(#{bno},#{title},#{writer})
	</insert>
	
	<!-- 삭제 -->
	<delete id="delete">
		delete from photo_board where bno=#{bno}
	</delete>
	
	<!-- 수정 : title, content, updatedate -->
	<update id="update">
		update photo_board set title=#{title}, updatedate=sysdate 
		where bno=#{bno}
	</update>
	
